<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorSlate"
        android:lineSpacingExtra="8sp"
        android:text="토큰/코인을 선택해주세요."
        android:layout_marginTop="26dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!--ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/token_card"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tokenCardMain"/>

    <ImageButton
        android:id="@+id/tokenCardMain"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/token_card"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="-5dp"
        android:background="@drawable/token_card"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tokenCardMain"
        app:layout_constraintTop_toBottomOf="@+id/textView9"/-->

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/colorSlate"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="10sp"
        android:text="보유량 :"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/notosans_medium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/colorBlueyGray"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="10sp"
        android:text="0000"
        android:layout_marginTop="5dp"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/notosans_regular"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorDarkBlueGray"
        android:lineSpacingExtra="4sp"
        android:text="송금하기"
        android:fontFamily="@font/notosans_regular"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textTokenSendValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@color/colorLightBlueGray"
        android:lineSpacingExtra="-28sp"
        android:fontFamily="@font/notosans_medium"
        android:text="0 KP"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <View
        android:id="@+id/textTokenSendValueBar"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@color/colorGray"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTokenSendValue"/>

    <LinearLayout
        android:id="@+id/passKeyboardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textTokenSendValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/vaoNavigationView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/send_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="1"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/send_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"/>

            <Button
                android:id="@+id/send_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="3"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/send_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="4"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/send_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"/>

            <Button
                android:id="@+id/send_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="6"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/send_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="7"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/send_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"/>

            <Button
                android:id="@+id/send_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="9"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/send_dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="."
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/send_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="13dp"
                android:gravity="center"
                android:background="@drawable/vao_keyboard"
                android:fontFamily="@font/notosans_regular"
                android:textSize="24sp"
                android:letterSpacing="0.12"
                android:lineSpacingExtra="9sp"
                android:textColor="#4c5264"
                android:includeFontPadding="false"
                android:text="0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginEnd="13dp"/>

            <ImageButton
                android:id="@+id/btnSendBack"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/vao_keyboard"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:onClick="onclickSendBackspace"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/vaoNavigationView"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigator_menu"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:labelVisibilityMode="unlabeled"
        android:theme="@style/BottomNavigationTheme"
        app:itemIconSize="40dp"/>

    <View
        android:id="@+id/sendBox"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sendBoxCancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="12dp"
        android:text="취소"
        android:textSize="16sp"
        android:textColor="@color/colorLightBlueGray"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="6sp"
        android:lineHeight="22sp"
        android:fontFamily="@font/notosans_semibold"
        android:background="@drawable/vao_btn_white_gray"
        app:layout_constraintBottom_toBottomOf="@+id/sendBox"
        app:layout_constraintStart_toStartOf="@+id/sendBox"
        app:layout_constraintTop_toTopOf="@+id/sendBox"
        app:layout_constraintEnd_toStartOf="@+id/sendBoxSend"
        android:elevation="8dp"
        android:visibility="invisible"
        android:onClick="onclickSendBoxCancel"/>

    <Button
        android:id="@+id/sendBoxSend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="12dp"
        android:text="보내기"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="6sp"
        android:lineHeight="22sp"
        android:fontFamily="@font/notosans_semibold"
        android:background="@drawable/vao_btn_gradient"
        app:layout_constraintBottom_toBottomOf="@+id/sendBox"
        app:layout_constraintStart_toEndOf="@+id/sendBoxCancel"
        app:layout_constraintEnd_toEndOf="@+id/sendBox"
        app:layout_constraintTop_toTopOf="@+id/sendBox"
        android:elevation="8dp"
        android:onClick="onclickSendBoxSend"
        android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>